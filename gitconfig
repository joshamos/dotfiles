[user]
	name = joshamos 
	email = josh.amos@gmail.com
[color]
	ui = auto

[alias]
	aa = add --all
	ci = commit
	co = checkout
	d  = diff
	dc = diff --cached
	ff = merge --ff-only
	l  = log --graph
	r  = !git --no-pager l -20
	st = status

[pull]
        rebase = true

[push]
	default = tracking

[fetch]
	prune = true

[format]
	pretty = format:%C(blue)%h%C(reset) - %s %C(green)- %an%C(reset) %C(blue)(%ar)%C(reset)

[rerere]
	enabled = true

[core]
	excludesFile = ~/.gitignore

[url "git@github.com:"]
	insteadOf = https://github.com/
	pushInsteadOf = git://github.com/
